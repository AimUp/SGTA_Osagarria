<header class="headerMenu masthead text-center text-white" style="padding: 1rem; position:fixed; left: 0px; top:4rem; width: 100%; height: 6rem;">
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div> 
    <div class="bg-circle-4 bg-circle"></div>
    <h1 class="h3 mb-3 font-weight-bold" style="position:relative;z-index: 10;margin-top: 1.5rem; color: black">
        Please sign up
    </h1>
</header>

<section style="margin-top: 15%">

    <%= form_for(   :user,
                    :url => {:controller => 'new_user', :action => 'create'},
                    :html => {:class=>"form-signin", :style=>"z-index: -1"}) do |f|%>

        <div class="text-center" >            
            <%= f.label :nanLabel, :class=>"sr-only" %>
            <%= f.text_field :nan, :id=> "inputNan", :class=>"form-control", placeholder:"NAN", :required => true%>
            <%= f.label :passwordLabel, :class=>"sr-only"%>
            <%= f.password_field :password, :id=> "inputPassword", :class=>"form-control", placeholder: "Pasahitza", :required => true%>
            <%= f.label :emailaLabel, :class=>"sr-only"%>
            <%= f.text_field :emaila, :id=> "inputEmail", :class=>"form-control", placeholder: "Emaila", :required => true%>
            <%= f.label :izenaLabel, :class=>"sr-only"%>
            <%= f.text_field :izena, :id=> "inputIzena", :class=>"form-control", placeholder: "Izena", :required => true%>
            <%= f.label :abizenakLabel, :class=>"sr-only"%>
            <%= f.text_field :abizenak, :id=> "inputAbizenak", :class=>"form-control", placeholder: "Abizenak", :required => true%>
            <%= f.label :telefonoaLabel, :class=>"sr-only"%>
            <%= f.text_field :telefonoa, :id=> "inputTelefonoa", :class=>"form-control", placeholder: "Telefonoa", :required => true%>
            <%= f.label :helbideaLabel, :class=>"sr-only"%>
            <%= f.text_field :helbidea, :id=> "inputHelbidea", :class=>"form-control", placeholder: "Helbidea", :required => true%>
            </div>

            <div class="actions">
                <%= f.submit :"Sign Up", :class=>"btn btn-lg btn-primary btn-block submitButton", disabled: true %>
                <label>Funtzio hau ez dago prest</label>
            </div>
            <p class="mt-5 mb-3 text-muted"></p>
        </div>
    <% end %>

</section>