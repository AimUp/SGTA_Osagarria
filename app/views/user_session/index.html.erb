<header class="headerMenu masthead text-center text-white" style="padding: 1rem; position:fixed; left: 0px; top:4rem; width: 100%; height: 6rem;">
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div> 
    <div class="bg-circle-4 bg-circle"></div>
    <h1 class="h3 mb-3 font-weight-bold" style="position:relative;z-index: 10;margin-top: 1.5rem; color: black">
        Please log in
    </h1>
</header>

<section><label> </label></section>

<section style="margin-top: 15%">

    <%= form_for(   :user,
    				:method => "post",
                    :url => {:action => 'create'},
                    :html => {:class=>"form-signin"}) do |f|%>
		
        <div class="text-center">            
            <%= f.label :nan, :class=>"sr-only" %>
            <%= f.text_field :nan, :id=> "inputNan", :class=>"form-control", placeholder:"Erabiltzailea", :required => true%>
            <%= f.label :password, :class=>"sr-only"%>
            <%= f.password_field :password, :id=> "inputPassword", :class=>"form-control", placeholder: "Pasahitza", :required => true%>
            <div class="checkbox mb-3">
                <label>
               		<input type="checkbox" value="remember-me"> Remember me
            	</label>
            </div>
            <div class="actions">
                <%= f.submit :"Log In", :class=>"btn btn-lg btn-primary btn-block submitButton"%>
            </div>
            <p class="mt-5 mb-3 text-muted"></p>
        </div>
        <center>
        	<label class="notice"><%= notice %></label>
        	<label class="alert" style="color: red"><%= alert %></label>
        </center>
    <% end %>

</section>